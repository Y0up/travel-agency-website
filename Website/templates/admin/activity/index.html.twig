{% extends 'admin/base.html.twig' %}

{% block title %}Administration du site
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Gestion des activitees</h1>
		<a href="{{ path('admin_activity_create') }}" class="btn btn-success">Ajouter une activitee</a>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Titre</th>
					<th class="text-center">Reservation</th>
					<th class="text-center">Note</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>

			<tbody>
				{% for activity in activities %}
					<tr>
						<td>{{ activity.id }}</td>
						<td>{{ activity.title }}</td>
						<td class="text-center">
							<span class="badge badge-info rounded">{{ activity.bookings | length }}</span>
						</td>
						<td class="text-center">
							<span class="badge badge-info rounded">{{ activity.avgRatings }}</span>
						</td>
						<td class="text-center">
							<a href="{{ path('admin_activity_edit', {'id': activity.id}) }}" class="btn btn-info">
								<i class="fas fa-edit"></i>
							</a>
							<a href="{{ path('admin_activity_delete', {'id': activity.id}) }}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>

				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
