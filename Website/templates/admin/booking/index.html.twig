{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des reservations
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="my-5">Gestion des reservations</h1>

		<table class="table table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Date</th>
					<th class="text-center">Visiteur</th>
					<th>Annonce</th>
					<th class="text-center">Actions</th>
				</tr>
			</thead>

			<tbody>
				{% for booking in bookings %}
					<tr>
						<td>{{ booking.id }}</td>
						<td>{{ booking.createdAt|date('d/m/Y H:i') }}</td>
						<td class="text-center">
							<p>{{ booking.booker.fullName }}</p>
						</td>
						<td>{{ booking.activity.title }}</td>
						<td class="text-center">
							<a href="{{ path('admin_booking_edit', {'id': booking.id}) }}" class="btn btn-info">
								<i class="fas fa-pen"></i>
							</a>
							<a href="{{ path('admin_booking_delete', {'id': booking.id}) }}" class="btn btn-danger">
								<i class="fas fa-trash"></i>
							</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
